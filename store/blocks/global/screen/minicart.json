{
"minicart.v2#home": {
    "props": {
      "MinicartIcon": "icon#home__account--fravega",
      "variation": "popup",
      "itemCountMode": "total",
      "quantityDisplay": "always"
    },
    "children": [
      "minicart-base-content"
    ]
  },
  "icon#home__account--fravega": {
    "props": {
      "id": "hpa-shopping",
      "size": 16,
      "viewBox":"0 0 25 25"
    }
  },
  "minicart-base-content":{
    "blocks":[
      "minicart-empty-state"
    ],
    "children":[
      "minicart-product-list",
      "flex-layout.row#minicart-footer"
    ],
    "props":{
      "blockClass":"minicart-base-content"
    }
  },
  "flex-layout.row#minicart-footer": {
    "props": {
      "blockClass": "minicart-footer"
    },
    "children": ["flex-layout.col#minicart-footer"]
  },
  "flex-layout.col#minicart-footer": {
    "children": ["minicart-checkout-button"]
  },
  "minicart-product-list": {
    "blocks": ["product-list#minicart"]
  },
  "product-list#minicart": {
    "blocks": [
    "product-list-content-desktop",
    "product-list-content-mobile"]
  },
  "minicart-checkout-button": {
    "props": {
      "finishShoppingButtonLink": "/checkout/#/orderform"
  }
  },
  "minicart-empty-state": {
    "children": ["flex-layout.row#empty-state"],
    "props":{
      "blockClass":"minicart-empty-state"
    }
  },
  "flex-layout.row#empty-state": {
    "children": [
      "flex-layout.col#img-empty-state",
      "flex-layout.col#text-empty-state"
    ],
    "props": {
      "blockClass": "content-row-empty-state",
      "preventHorizontalStretch": true
    }
  },
  "flex-layout.col#img-empty-state": {
    "children": [
      "image#minicart-empty-state"
    ],
    "props": {
      "blockClass": "content-img-empty-state",
      "verticalAlign": "middle"
    }
  },
  "image#minicart-empty-state": {
    "props": {
      "src": "assets/img/carrito.svg",
      "blockClass": "icon-minicart-empty-state" 
    }
  },
  "flex-layout.col#text-empty-state": {
    "children": [
      "rich-text#minicart-line-1-empty-state",
      "rich-text#minicart-line-2-empty-state"
    ],
    "props": {
      "blockClass":"content-col-empty-state"
    }
  },
  "rich-text#minicart-line-1-empty-state": {
    "props": {
      "text": "Tu carrito esta vacio",
      "blockClass": "minicart-line-1",
      "textAlignment": "LEFT"
    }
  },
  "rich-text#minicart-line-2-empty-state": {
    "props": {
      "text": "Descubri las categorias del sitio y elegi los mejores productos.",
      "blockClass": "minicart-line-2",
      "textAlignment": "LEFT"
    }
  }
}